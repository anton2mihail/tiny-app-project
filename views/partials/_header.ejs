<% if(!username){ %>
<form class='bstCenter' method="POST" action="/login">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name='username' type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<% }else{ %>
<form class='bstCenter' method='POST' action="/logout">
  <div class="form-group">
    <div class="alert alert-primary" role="alert">
      <%= username %>
    </div>
    <button type="submit" class="btn btn-warning bstCenterButton">Logout</button>
  </div>
</form>
<% } %>