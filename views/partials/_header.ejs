<% if(!username){ %>
<h1 class="cent">Welcome Back!</h1>
<h3 class="cent">Login</h3>
<form class='bstCenter' method="POST" action="/login">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name='username' type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input name='password' type="password" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-success">Login</button>
  <a class="linkReset" href="/register"><button type='button' class="btn btn-info bstInline">Register</button></a>
</form>

<% }else{ %>
<% } %>