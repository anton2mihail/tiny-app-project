<!DOCTYPE html>
<html>

<% include ./partials/_head %>

<body>
  <% include ./partials/_nav %>
  <div class="container">
    <div class="form">
      <h1 class="purp">All Urls</h1>
      <ul class="list-group">
        <% if(urls){ %>
        <% Object.keys(urls).forEach(el =>{ %>
        <li class="list-group-item">
          <a href='/go/<%= el %>'>
            <%= publicUrl+'/go/'+ el %></a> =>
          <%= urls[el].url %>
          <br />
          <a class="reset" href='/urls/<%= el %>'>
            <button class="btn btn-warning fa-input">
              <i class="fas fa-edit"></i>
              Edit
            </button>
          </a>
          <form class="init" method="POST" action="/urls/<%= el %>?_method=DELETE">
            <button class="btn btn-danger fa-input">
              <i class="fas fa-trash"></i>
              DELETE
            </button>
          </form>
        </li>
        <% }) %>
        <% } %>
        <li class="list-group-item" style="text-align:center;">
          <% if(!newUrl){ %>
          <hr />
          <form method="GET" action="/urls/new">
            <button type="submit" class="btn btn-info fa-input">
              <i class="fas fa-plus"></i>
              New URL
            </button>
          </form>
          <% } else if (newUrl == 't') { %>
          <% include ./partials/_new %>
          <% } %>
        </li>
      </ul>
    </div>
  </div>
  </div>
</body>

</html>