<!DOCTYPE html>
<html>

<% include ./partials/_head %>

<body>
  <% include ./partials/_nav %>
  <% include ./partials/_header %>
  <div class="container">
    <div class="form">

      Your Urls
      <ul class="list-group">
        <% if(urls){ %>
        <% Object.keys(urls).forEach(el =>{ %>
        <li class="list-group-item">
          <a href='/go/<%= el %>'>
            <%= publicUrl+'/go/'+ el %></a> =>
          <%= urls[el].url %>
          <a class="reset inline" href='/urls/<%= el %>'>
            <button class="btn btn-warning">
              Edit
            </button>
          </a>
          <form class="inline" method="POST" action="/urls/<%= el %>?_method=DELETE">
            <button class="btn btn-danger">DELETE</button>
          </form>
        </li>
        <% }) %>
        <% } %>
        <li class="list-group-item" style="text-align:center;">
          <% if(username ){ %>
          <% if(!newUrl){ %>
          <form method="GET" action="/urls/new">
            <button type="submit" class="btn btn-info">New URL</button>
          </form>
          <% } else if (newUrl == 't') { %>
          <% include ./partials/_new %>
          <% } %>
          <% } %>
        </li>
      </ul>
    </div>
  </div>
  </div>
</body>

</html>